<update id="updateByPrimaryKey" parameterType="com.dianxin.imessage.dao.dataobject.DxVsersionUpdateModel" >
	update tbl_vsersion_update <set><include refid="updateParams"/></set><include refid="where"/><include refid="columnKey"/>
</update>

<!-- 修改,SQL更新 -->
<update id="updateBySql" parameterType="java.lang.String">
	  <include refid="sql"/>
</update>

