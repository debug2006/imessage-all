<mapper namespace="com.dianxin.imessage.dao.mapper.VsersionUpdateMapper" > 
<cache type="org.mybatis.caches.ehcache.LoggingEhcache"/> 
<!-- Result Map 数据库映射到实体类  -->
<resultMap id="tableMapToModel" type="com.dianxin.imessage.dao.dataobject.DxVsersionUpdateModel" >
 <result column="ID" property="id"/>
 <result column="VERSION_NUM" property="versionNum"/>
 <result column="DEVICE_TYPE" property="deviceType"/>
 <result column="URL" property="url"/>
 <result column="VESION_DESC" property="vesionDesc"/>
 <result column="FIXED_LIST" property="fixedList"/>
 <result column="CREATE_DATE" property="createDate"/>
 <result column="MODIFY_DATE" property="modifyDate"/>
</resultMap>

<!-- 所有条件分页 -->
<sql id="model">
    <include refid="modelCount"/>
    ${pageUtil.orderByCondition}
    <if test="pageUtil.paging == true" >
    	${pageUtil.limit}
    </if>
</sql>

<!-- 总记录数 -->
<sql id="modelCount">
	<where>
	   <choose>
	      <when test="pageUtil.like==true">
	         <include refid="andOtherAllLike"/>
	      </when>
	      <otherwise>
	     	 <include refid="andOtherAll"/>
	      </otherwise>
	   </choose>
	   ${pageUtil.andCondition}
	</where>
    ${pageUtil.queryCondition}
</sql>

<!-- tbaleColumns  所有列 -->
<!--  id,name,password,nickName,email,icon,state,time,count,createTime,remark -->
<sql id="tbaleColumns">
	<trim suffix="" suffixOverrides=",">
			     ID,
	    	     VERSION_NUM,
	    	     DEVICE_TYPE,
	    	     URL,
	    	     VESION_DESC,
	    	     FIXED_LIST,
	    	     CREATE_DATE,
	    	     MODIFY_DATE,
	    	</trim>
</sql>


<!-- insertColumns 入库列 -->
<sql id="insertColumns">
	<trim suffix="" suffixOverrides=",">
	    	       ID,
	    	       VERSION_NUM,
	    	       DEVICE_TYPE,
	    	       URL,
	    	       VESION_DESC,
	    	       FIXED_LIST,
	    	       CREATE_DATE,
	    	       MODIFY_DATE,
	        </trim>
</sql>


<!-- insertParams  入库值 -->
<sql id="insertParams">
	<trim suffix="" suffixOverrides=",">
			       #{id},
	    	       #{versionNum},
	    	       #{deviceType},
	    	       #{url},
	    	       #{vesionDesc},
	    	       #{fixedList},
	    	       #{createDate},
	    	       #{modifyDate},
	        </trim>
</sql>


<!-- updateParams  更新列 -->
<sql id="updateParams">
	<trim suffix="" suffixOverrides=",">
				  	       <if test="id != null and id !='' " >
			 ID=#{id},
	       </if>
	      	    		  	       <if test="versionNum != null and versionNum !='' " >
			 VERSION_NUM=#{versionNum},
	       </if>
	      	    		  	       <if test="deviceType != null and deviceType !='' " >
			 DEVICE_TYPE=#{deviceType},
	       </if>
	      	    		  	       <if test="url != null and url !='' " >
			 URL=#{url},
	       </if>
	      	    		  	       <if test="vesionDesc != null and vesionDesc !='' " >
			 VESION_DESC=#{vesionDesc},
	       </if>
	      	    		  	       <if test="fixedList != null and fixedList !='' " >
			 FIXED_LIST=#{fixedList},
	       </if>
	      	    		  	       <if test="createDate != null and createDate !='' " >
			 CREATE_DATE=#{createDate},
	       </if>
	      	    		  	       <if test="modifyDate != null and modifyDate !='' " >
			 MODIFY_DATE=#{modifyDate},
	       </if>
	      	        </trim>
</sql>

<!-- 查询条件  包含所有 -->
<sql id="andOtherAll">
	<trim  suffixOverrides="," >
              <if test="id != null and id !='' " >
          and  ID=#{id}
        </if>
              <if test="versionNum != null and versionNum !='' " >
          and  VERSION_NUM=#{versionNum}
        </if>
              <if test="deviceType != null and deviceType !='' " >
          and  DEVICE_TYPE=#{deviceType}
        </if>
              <if test="url != null and url !='' " >
          and  URL=#{url}
        </if>
              <if test="vesionDesc != null and vesionDesc !='' " >
          and  VESION_DESC=#{vesionDesc}
        </if>
              <if test="fixedList != null and fixedList !='' " >
          and  FIXED_LIST=#{fixedList}
        </if>
              <if test="createDate != null and createDate !='' " >
          and  CREATE_DATE=#{createDate}
        </if>
              <if test="modifyDate != null and modifyDate !='' " >
          and  MODIFY_DATE=#{modifyDate}
        </if>
      	</trim>
</sql>


<!-- 模糊查询判断 -->
<sql id="andOtherAllLike">
	<trim  suffixOverrides="," >
			        <if test="id != null and id !='' " >
	          and ID like  &apos;${id}%&apos;
	        </if>
        	        <if test="versionNum != null and versionNum !='' " >
	          and VERSION_NUM like  &apos;${versionNum}%&apos;
	        </if>
        	        <if test="deviceType != null and deviceType !='' " >
	          and DEVICE_TYPE like  &apos;${deviceType}%&apos;
	        </if>
        	        <if test="url != null and url !='' " >
	          and URL like  &apos;${url}%&apos;
	        </if>
        	        <if test="vesionDesc != null and vesionDesc !='' " >
	          and VESION_DESC like  &apos;${vesionDesc}%&apos;
	        </if>
        	        <if test="fixedList != null and fixedList !='' " >
	          and FIXED_LIST like  &apos;${fixedList}%&apos;
	        </if>
        	        <if test="createDate != null and createDate !='' " >
	          and CREATE_DATE like  &apos;${createDate}%&apos;
	        </if>
        	        <if test="modifyDate != null and modifyDate !='' " >
	          and MODIFY_DATE like  &apos;${modifyDate}%&apos;
	        </if>
        	</trim>
</sql>

<!-- where 条件  -->
<sql id="where">
     where 1=1
</sql>

<!-- columnKey  主键 列名称 ,视图获取不到主键 需要设置 -->
<sql id="columnKey">
    and ID=#{id}
</sql>


<!-- 自定义查询 -->
<sql id="sql">
   <if test="sql != null and sql !=''">
       ${sql}
   </if>
   <if test="sql == null || sql==''">
      select <include refid="tbaleColumns"/> from tbl_vsersion_update <include refid="where"/>
   </if>
</sql>

<!-- 查询条件 -->
<sql id="queryCondition">
     <if test="queryCondition != null and queryCondition != ''">
         ${queryCondition}
     </if>
</sql>


<!-- 添加,插入记录   -->
<insert id="insert"  parameterType="com.dianxin.imessage.dao.dataobject.DxVsersionUpdateModel" useGeneratedKeys="true" keyProperty="id">
    insert into tbl_vsersion_update(<include refid="insertColumns"/>) values(<include refid="insertParams"/>)
</insert>

<!-- 添加,SQL添加   -->
<insert id="insertBySql" parameterType="java.lang.String">
    <include refid="sql"/>
</insert>

