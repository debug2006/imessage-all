<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- 
         符号转义说明
    &lt;          < 
    &gt;          >  
    &lt;&gt;     <>
    &amp;        & 
    &apos;       '
    &quot;       "
  <![CDATA[ 这里写你的SQL或者符号 ]]> 
 -->
<mapper namespace="com.dianxin.imessage.dao.mapper.UserAddrMapper" > 
<cache type="org.mybatis.caches.ehcache.LoggingEhcache"/> 
<!-- Result Map 数据库映射到实体类  -->
<resultMap id="tableMapToModel" type="com.dianxin.imessage.dao.dataobject.DxUserAddrModel" >
 <result column="ADDR_ID" property="addrId"/>
 <result column="UID" property="uid"/>
 <result column="PROVINCE" property="province"/>
 <result column="CITY" property="city"/>
 <result column="AREA" property="area"/>
 <result column="RANK" property="rank"/>
 <result column="ADDR_DETAIL" property="addrDetail"/>
 <result column="CREATE_DATE" property="createDate"/>
 <result column="MODIFY_DATE" property="modifyDate"/>
</resultMap>

<!-- 所有条件分页 -->
<sql id="model">
    <include refid="modelCount"/>
    ${pageUtil.orderByCondition}
    <if test="pageUtil.paging == true" >
    	${pageUtil.limit}
    </if>
</sql>

<!-- 总记录数 -->
<sql id="modelCount">
	<where>
	   <choose>
	      <when test="pageUtil.like==true">
	         <include refid="andOtherAllLike"/>
	      </when>
	      <otherwise>
	     	 <include refid="andOtherAll"/>
	      </otherwise>
	   </choose>
	   ${pageUtil.andCondition}
	</where>
    ${pageUtil.queryCondition}
</sql>

<!-- tbaleColumns  所有列 -->
<!--  id,name,password,nickName,email,icon,state,time,count,createTime,remark -->
<sql id="tbaleColumns">
	<trim suffix="" suffixOverrides=",">
			     ADDR_ID,
	    	     UID,
	    	     PROVINCE,
	    	     CITY,
	    	     AREA,
	    	     RANK,
	    	     ADDR_DETAIL,
	    	     CREATE_DATE,
	    	     MODIFY_DATE,
	    	</trim>
</sql>


<!-- insertColumns 入库列 -->
<sql id="insertColumns">
	<trim suffix="" suffixOverrides=",">
	    	       ADDR_ID,
	    	       UID,
	    	       PROVINCE,
	    	       CITY,
	    	       AREA,
	    	       RANK,
	    	       ADDR_DETAIL,
	    	       CREATE_DATE,
	    	       MODIFY_DATE,
	        </trim>
</sql>


<!-- insertParams  入库值 -->
<sql id="insertParams">
	<trim suffix="" suffixOverrides=",">
			       #{addrId},
	    	       #{uid},
	    	       #{province},
	    	       #{city},
	    	       #{area},
	    	       #{rank},
	    	       #{addrDetail},
	    	       #{createDate},
	    	       #{modifyDate},
	        </trim>
</sql>


<!-- updateParams  更新列 -->
<sql id="updateParams">
	<trim suffix="" suffixOverrides=",">
				  	       <if test="addrId != null and addrId !='' " >
			 ADDR_ID=#{addrId},
	       </if>
	      	    		  	       <if test="uid != null and uid !='' " >
			 UID=#{uid},
	       </if>
	      	    		  	       <if test="province != null and province !='' " >
			 PROVINCE=#{province},
	       </if>
	      	    		  	       <if test="city != null and city !='' " >
			 CITY=#{city},
	       </if>
	      	    		  	       <if test="area != null and area !='' " >
			 AREA=#{area},
	       </if>
	      	    		  	       <if test="rank != null and rank !='' " >
			 RANK=#{rank},
	       </if>
	      	    		  	       <if test="addrDetail != null and addrDetail !='' " >
			 ADDR_DETAIL=#{addrDetail},
	       </if>
	      	    		  	       <if test="createDate != null and createDate !='' " >
			 CREATE_DATE=#{createDate},
	       </if>
	      	    		  	       <if test="modifyDate != null and modifyDate !='' " >
			 MODIFY_DATE=#{modifyDate},
	       </if>
	      	        </trim>
</sql>

<!-- 查询条件  包含所有 -->
<sql id="andOtherAll">
	<trim  suffixOverrides="," >
              <if test="addrId != null and addrId !='' " >
          and  ADDR_ID=#{addrId}
        </if>
              <if test="uid != null and uid !='' " >
          and  UID=#{uid}
        </if>
              <if test="province != null and province !='' " >
          and  PROVINCE=#{province}
        </if>
              <if test="city != null and city !='' " >
          and  CITY=#{city}
        </if>
              <if test="area != null and area !='' " >
          and  AREA=#{area}
        </if>
              <if test="rank != null and rank !='' " >
          and  RANK=#{rank}
        </if>
              <if test="addrDetail != null and addrDetail !='' " >
          and  ADDR_DETAIL=#{addrDetail}
        </if>
              <if test="createDate != null and createDate !='' " >
          and  CREATE_DATE=#{createDate}
        </if>
              <if test="modifyDate != null and modifyDate !='' " >
          and  MODIFY_DATE=#{modifyDate}
        </if>
      	</trim>
</sql>


<!-- 模糊查询判断 -->
<sql id="andOtherAllLike">
	<trim  suffixOverrides="," >
			        <if test="addrId != null and addrId !='' " >
	          and ADDR_ID like  &apos;${addrId}%&apos;
	        </if>
        	        <if test="uid != null and uid !='' " >
	          and UID like  &apos;${uid}%&apos;
	        </if>
        	        <if test="province != null and province !='' " >
	          and PROVINCE like  &apos;${province}%&apos;
	        </if>
        	        <if test="city != null and city !='' " >
	          and CITY like  &apos;${city}%&apos;
	        </if>
        	        <if test="area != null and area !='' " >
	          and AREA like  &apos;${area}%&apos;
	        </if>
        	        <if test="rank != null and rank !='' " >
	          and RANK like  &apos;${rank}%&apos;
	        </if>
        	        <if test="addrDetail != null and addrDetail !='' " >
	          and ADDR_DETAIL like  &apos;${addrDetail}%&apos;
	        </if>
        	        <if test="createDate != null and createDate !='' " >
	          and CREATE_DATE like  &apos;${createDate}%&apos;
	        </if>
        	        <if test="modifyDate != null and modifyDate !='' " >
	          and MODIFY_DATE like  &apos;${modifyDate}%&apos;
	        </if>
        	</trim>
</sql>

<!-- where 条件  -->
<sql id="where">
     where 1=1
</sql>

<!-- columnKey  主键 列名称 ,视图获取不到主键 需要设置 -->
<sql id="columnKey">
    and ADDR_ID=#{addr_id}
</sql>


<!-- 自定义查询 -->
<sql id="sql">
   <if test="sql != null and sql !=''">
       ${sql}
   </if>
   <if test="sql == null || sql==''">
      select <include refid="tbaleColumns"/> from tbl_user_addr <include refid="where"/>
   </if>
</sql>

<!-- 查询条件 -->
<sql id="queryCondition">
     <if test="queryCondition != null and queryCondition != ''">
         ${queryCondition}
     </if>
</sql>


<!-- 添加,插入记录   -->
<insert id="insert"  parameterType="com.dianxin.imessage.dao.dataobject.DxUserAddrModel" useGeneratedKeys="true" keyProperty="addr_id">
    insert into tbl_user_addr(<include refid="insertColumns"/>) values(<include refid="insertParams"/>)
</insert>

<!-- 添加,SQL添加   -->
<insert id="insertBySql" parameterType="java.lang.String">
    <include refid="sql"/>
</insert>

<!-- 删除,主键删除   -->
<delete id="deleteByPrimaryKey" parameterType="com.dianxin.imessage.dao.dataobject.DxUserAddrModel">
    delete from tbl_user_addr<include refid="where"/><include refid="columnKey"/>
</delete>

<!-- 删除,实体删除   -->
<delete id="deleteByEntity" parameterType="com.dianxin.imessage.dao.dataobject.DxUserAddrModel">
    delete from tbl_user_addr<include refid="where"/><include refid="andOtherAll"/>
</delete>

<!-- 删除,SQL删除   -->
<delete id="deleteBySql" parameterType="java.lang.String">
      <include refid="sql"/>
</delete>

<!-- 修改,主键更新  -->
<update id="updateByPrimaryKey" parameterType="com.dianxin.imessage.dao.dataobject.DxUserAddrModel" >
	update tbl_user_addr <set><include refid="updateParams"/></set><include refid="where"/><include refid="columnKey"/>
</update>

<!-- 修改,SQL更新 -->
<update id="updateBySql" parameterType="java.lang.String">
	  <include refid="sql"/>
</update>

<!-- 查询,主键查询   -->
<select id="selectByPrimaryKey"  resultMap="tableMapToModel" parameterType="java.lang.Object">
	select <include refid="tbaleColumns"/> from tbl_user_addr <include refid="where"/> <include refid="columnKey"/>
</select>

<!-- 查询,实体查询   -->
<select id="selectByEntiry"  resultMap="tableMapToModel" parameterType="com.dianxin.imessage.dao.dataobject.DxUserAddrModel">
	select <include refid="tbaleColumns"/> from tbl_user_addr <include refid="where"/> <include refid="andOtherAll"/>
</select>

<!-- 查询,SQL -->
<select id="selectBySql"  resultMap="tableMapToModel" parameterType="java.lang.String">
     <include refid="sql"/>
</select>
  	
<!-- 查询 ,总行数,分页 ,模型 -->
<select id="selectByModelCount" resultType="java.lang.Integer"  parameterType="com.dianxin.imessage.dao.dataobject.DxUserAddrModel">
	select count(1) from tbl_user_addr <include refid="modelCount"/>
</select>
  	
<!-- 查询,排序,分页,模型  -->
<select id="selectByModel" resultMap="tableMapToModel"  parameterType="com.dianxin.imessage.dao.dataobject.DxUserAddrModel">
	select <include refid="tbaleColumns"/>from tbl_user_addr <include refid="model"/>
</select>

<!-- 查询,总行数,Map -->
<select id="selectByMapCount" resultType="java.lang.Integer"  parameterType="java.util.Map">
	select count(1) from tbl_user_addr <include refid="where"/><include refid="andOtherAll"/>
    ${queryCondition}
	<if test="andCondition !=null and andCondition !=''">
	   and ${andCondition}
	</if>
	<if test="orderCondition != null and queryCondition != ''" >
    	order by ${orderCondition}
    </if>
</select>
  	
<!-- 查询,参数查询,Map -->
<select id="selectByMap" resultMap="tableMapToModel"  parameterType="java.util.Map">
	select <include refid="tbaleColumns"/>from tbl_user_addr <include refid="where"/><include refid="andOtherAll"/>
    ${queryCondition}
	<if test="andCondition !=null and andCondition !=''">
	   and ${andCondition}
	</if>
	<if test="orderCondition != null and queryCondition != ''" >
    	order by ${orderCondition}
    </if>
</select>

<!-- 查询,总行数,Map分页 -->
<select id="selectByMapPagingCount" resultType="java.lang.Integer"  parameterType="java.util.Map">
	select count(0) from tbl_user_addr <include refid="where"/><include refid="andOtherAll"/>
    ${queryCondition}
	<if test="andCondition !=null and andCondition !=''">
	   and ${andCondition}
	</if>
    ${pageUtil.queryCondition}
    ${pageUtil.andCondition}
</select>

<!-- 查询,参数查询,Map分页 -->
<select id="selectByMapPaging" resultMap="tableMapToModel"  parameterType="java.util.Map">
	select <include refid="tbaleColumns"/>from tbl_user_addr <include refid="where"/><include refid="andOtherAll"/>
	${queryCondition}
	<if test="andCondition !=null and andCondition !=''">
	   and ${andCondition}
	</if>
	<if test="orderCondition != null and queryCondition != ''" >
    	order by ${orderCondition}
    </if>
    ${pageUtil.queryCondition}
    ${pageUtil.andCondition}
    ${pageUtil.orderByCondition}
    ${pageUtil.limit}
</select>

