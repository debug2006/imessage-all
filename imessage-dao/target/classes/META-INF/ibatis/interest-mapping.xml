<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- 
         符号转义说明
    &lt;          < 
    &gt;          >  
    &lt;&gt;     <>
    &amp;        & 
    &apos;       '
    &quot;       "
  <![CDATA[ 这里写你的SQL或者符号 ]]> 
 -->
<mapper namespace="com.dianxin.imessage.dao.mapper.InterestMapper" > 
<cache type="org.mybatis.caches.ehcache.LoggingEhcache"/> 
<!-- Result Map 数据库映射到实体类  -->
<resultMap id="tableMapToModel" type="com.dianxin.imessage.dao.dataobject.DxInterestModel" >
 <result column="ID" property="id"/>
 <result column="INTEREST" property="interest"/>
 <result column="CREATE_DATE" property="createDate"/>
 <result column="MODIFY_DATE" property="modifyDate"/>
</resultMap>

<!-- 所有条件分页 -->
<sql id="model">
    <include refid="modelCount"/>
    ${pageUtil.orderByCondition}
    <if test="pageUtil.paging == true" >
    	${pageUtil.limit}
    </if>
</sql>

<!-- 总记录数 -->
<sql id="modelCount">
	<where>
	   <choose>
	      <when test="pageUtil.like==true">
	         <include refid="andOtherAllLike"/>
	      </when>
	      <otherwise>
	     	 <include refid="andOtherAll"/>
	      </otherwise>
	   </choose>
	   ${pageUtil.andCondition}
	</where>
    ${pageUtil.queryCondition}
</sql>

<!-- tbaleColumns  所有列 -->
<!--  id,name,password,nickName,email,icon,state,time,count,createTime,remark -->
<sql id="tbaleColumns">
	<trim suffix="" suffixOverrides=",">
			     ID,
	    	     INTEREST,
	    	     CREATE_DATE,
	    	     MODIFY_DATE,
	    	</trim>
</sql>


<!-- insertColumns 入库列 -->
<sql id="insertColumns">
	<trim suffix="" suffixOverrides=",">
	    	       ID,
	    	       INTEREST,
	    	       CREATE_DATE,
	    	       MODIFY_DATE,
	        </trim>
</sql>


<!-- insertParams  入库值 -->
<sql id="insertParams">
	<trim suffix="" suffixOverrides=",">
			       #{id},
	    	       #{interest},
	    	       #{createDate},
	    	       #{modifyDate},
	        </trim>
</sql>


<!-- updateParams  更新列 -->
<sql id="updateParams">
	<trim suffix="" suffixOverrides=",">
				  	       <if test="id != null and id !='' " >
			 ID=#{id},
	       </if>
	      	    		  	       <if test="interest != null and interest !='' " >
			 INTEREST=#{interest},
	       </if>
	      	    		  	       <if test="createDate != null and createDate !='' " >
			 CREATE_DATE=#{createDate},
	       </if>
	      	    		  	       <if test="modifyDate != null and modifyDate !='' " >
			 MODIFY_DATE=#{modifyDate},
	       </if>
	      	        </trim>
</sql>

<!-- 查询条件  包含所有 -->
<sql id="andOtherAll">
	<trim  suffixOverrides="," >
              <if test="id != null and id !='' " >
          and  ID=#{id}
        </if>
              <if test="interest != null and interest !='' " >
          and  INTEREST=#{interest}
        </if>
              <if test="createDate != null and createDate !='' " >
          and  CREATE_DATE=#{createDate}
        </if>
              <if test="modifyDate != null and modifyDate !='' " >
          and  MODIFY_DATE=#{modifyDate}
        </if>
      	</trim>
</sql>


<!-- 模糊查询判断 -->
<sql id="andOtherAllLike">
	<trim  suffixOverrides="," >
			        <if test="id != null and id !='' " >
	          and ID like  &apos;${id}%&apos;
	        </if>
        	        <if test="interest != null and interest !='' " >
	          and INTEREST like  &apos;${interest}%&apos;
	        </if>
        	        <if test="createDate != null and createDate !='' " >
	          and CREATE_DATE like  &apos;${createDate}%&apos;
	        </if>
        	        <if test="modifyDate != null and modifyDate !='' " >
	          and MODIFY_DATE like  &apos;${modifyDate}%&apos;
	        </if>
        	</trim>
</sql>

<!-- where 条件  -->
<sql id="where">
     where 1=1
</sql>

<!-- columnKey  主键 列名称 ,视图获取不到主键 需要设置 -->
<sql id="columnKey">
    and ID=#{id}
</sql>


<!-- 自定义查询 -->
<sql id="sql">
   <if test="sql != null and sql !=''">
       ${sql}
   </if>
   <if test="sql == null || sql==''">
      select <include refid="tbaleColumns"/> from tbl_interest <include refid="where"/>
   </if>
</sql>

<!-- 查询条件 -->
<sql id="queryCondition">
     <if test="queryCondition != null and queryCondition != ''">
         ${queryCondition}
     </if>
</sql>


<!-- 添加,插入记录   -->
<insert id="insert"  parameterType="com.dianxin.imessage.dao.dataobject.DxInterestModel" useGeneratedKeys="true" keyProperty="id">
    insert into tbl_interest(<include refid="insertColumns"/>) values(<include refid="insertParams"/>)
</insert>

<!-- 添加,SQL添加   -->
<insert id="insertBySql" parameterType="java.lang.String">
    <include refid="sql"/>
</insert>

<!-- 删除,主键删除   -->
<delete id="deleteByPrimaryKey" parameterType="com.dianxin.imessage.dao.dataobject.DxInterestModel">
    delete from tbl_interest<include refid="where"/><include refid="columnKey"/>
</delete>

<!-- 删除,实体删除   -->
<delete id="deleteByEntity" parameterType="com.dianxin.imessage.dao.dataobject.DxInterestModel">
    delete from tbl_interest<include refid="where"/><include refid="andOtherAll"/>
</delete>

<!-- 删除,SQL删除   -->
<delete id="deleteBySql" parameterType="java.lang.String">
      <include refid="sql"/>
</delete>

<!-- 修改,主键更新  -->
<update id="updateByPrimaryKey" parameterType="com.dianxin.imessage.dao.dataobject.DxInterestModel" >
	update tbl_interest <set><include refid="updateParams"/></set><include refid="where"/><include refid="columnKey"/>
</update>

<!-- 修改,SQL更新 -->
<update id="updateBySql" parameterType="java.lang.String">
	  <include refid="sql"/>
</update>

<!-- 查询,主键查询   -->
<select id="selectByPrimaryKey"  resultMap="tableMapToModel" parameterType="java.lang.Object">
	select <include refid="tbaleColumns"/> from tbl_interest <include refid="where"/> <include refid="columnKey"/>
</select>

<!-- 查询,实体查询   -->
<select id="selectByEntiry"  resultMap="tableMapToModel" parameterType="com.dianxin.imessage.dao.dataobject.DxInterestModel">
	select <include refid="tbaleColumns"/> from tbl_interest <include refid="where"/> <include refid="andOtherAll"/>
</select>

<!-- 查询,SQL -->
<select id="selectBySql"  resultMap="tableMapToModel" parameterType="java.lang.String">
     <include refid="sql"/>
</select>
  	
<!-- 查询 ,总行数,分页 ,模型 -->
<select id="selectByModelCount" resultType="java.lang.Integer"  parameterType="com.dianxin.imessage.dao.dataobject.DxInterestModel">
	select count(1) from tbl_interest <include refid="modelCount"/>
</select>
  	
<!-- 查询,排序,分页,模型  -->
<select id="selectByModel" resultMap="tableMapToModel"  parameterType="com.dianxin.imessage.dao.dataobject.DxInterestModel">
	select <include refid="tbaleColumns"/>from tbl_interest <include refid="model"/>
</select>

<!-- 查询,总行数,Map -->
<select id="selectByMapCount" resultType="java.lang.Integer"  parameterType="java.util.Map">
	select count(1) from tbl_interest <include refid="where"/><include refid="andOtherAll"/>
    ${queryCondition}
	<if test="andCondition !=null and andCondition !=''">
	   and ${andCondition}
	</if>
	<if test="orderCondition != null and queryCondition != ''" >
    	order by ${orderCondition}
    </if>
</select>
  	
<!-- 查询,参数查询,Map -->
<select id="selectByMap" resultMap="tableMapToModel"  parameterType="java.util.Map">
	select <include refid="tbaleColumns"/>from tbl_interest <include refid="where"/><include refid="andOtherAll"/>
    ${queryCondition}
	<if test="andCondition !=null and andCondition !=''">
	   and ${andCondition}
	</if>
	<if test="orderCondition != null and queryCondition != ''" >
    	order by ${orderCondition}
    </if>
</select>

<!-- 查询,总行数,Map分页 -->
<select id="selectByMapPagingCount" resultType="java.lang.Integer"  parameterType="java.util.Map">
	select count(0) from tbl_interest <include refid="where"/><include refid="andOtherAll"/>
    ${queryCondition}
	<if test="andCondition !=null and andCondition !=''">
	   and ${andCondition}
	</if>
    ${pageUtil.queryCondition}
    ${pageUtil.andCondition}
</select>

<!-- 查询,参数查询,Map分页 -->
<select id="selectByMapPaging" resultMap="tableMapToModel"  parameterType="java.util.Map">
	select <include refid="tbaleColumns"/>from tbl_interest <include refid="where"/><include refid="andOtherAll"/>
	${queryCondition}
	<if test="andCondition !=null and andCondition !=''">
	   and ${andCondition}
	</if>
	<if test="orderCondition != null and queryCondition != ''" >
    	order by ${orderCondition}
    </if>
    ${pageUtil.queryCondition}
    ${pageUtil.andCondition}
    ${pageUtil.orderByCondition}
    ${pageUtil.limit}
</select>

<!--//////////////////////增加/////////////////////// -->

<!-- 根据uid查询兴趣 -->
<select id="queryInterestByUid" resultMap="tableMapToModel" parameterType="java.lang.Integer">
	select <include refid="tbaleColumns"/> 
		from tbl_interest i
	where EXISTS (select u.interest_id from tbl_user_interest u where u.uid = ${uid} and u.interest_id = i.id)
</select>

<!-- 根据uid和fid查询相同兴趣的数量 -->
<select id="queryCommonInterestByUidAndFid" resultType="java.lang.Integer" parameterType="java.util.Map">
	select count(1) 
		from tbl_user_interest 
	where interest_id in( select interest_id from tbl_user_interest where uid = ${uid}) 
	and uid = ${fid}
</select>

<!-- 根据uid和fid查询相同的兴趣名称 -->
<select id="queryCommonInterest" resultMap="tableMapToModel"  parameterType="java.util.Map">
	SELECT
		<include refid="tbaleColumns"/>
	FROM
		tbl_interest
	WHERE
		id IN (
			SELECT
				interest_id
			FROM
				tbl_user_interest
			WHERE
				interest_id IN (
					SELECT
						interest_id
					FROM
						tbl_user_interest
					WHERE
						uid = ${uid}
				)
			AND uid = ${fid}
		)
</select>

<select id="searchInterest" resultMap="tableMapToModel"  parameterType="java.util.Map">
	select * from tbl_interest t where EXISTS (
		select 1 from( 
			select DISTINCT interest_id from tbl_interest_label temp1 where EXISTS(
				select 1 from (
					select DISTINCT label_id from tbl_interest_label where exists (
						select 1 from tbl_interest where interest like '%${interestName}%' and interest_id =  id
					)
				) as temp2 where temp1.label_id = temp2.label_id
			)
		) as temp3 where temp3.interest_id = t.id
	) limit ${pageOffset}, $(pageSize)
</select>
</mapper>   